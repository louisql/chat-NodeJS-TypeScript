{
    "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "types": ["node", "express", "mongoose", "express-validator", "dotenv", "./custom.d.ts"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
  